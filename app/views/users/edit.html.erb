<div class = "container">
  <div class = "row">
    <div class = "col-md-8 offset-md-1">
      <h2>会員情報編集 </h2>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>

      <%= form_with model: @user, local: true do |f| %>
        <div class="field">
          <%= f.label :名前 %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.email_field :password, autofocus: true, autocomplete: "password" %>
        </div>

        <%= attachment_image_tag @user, :image, :fill, 60, 60, fallback: "no_image.jpg"%>
          <label for="inputImage">ProfileImage</label>
        <%= f.attachment_field :image, placeholder: "プロフィール画像" %>

        <div class="actions">
          <%= f.submit "保存" %>
        </div>
      <% end %>

      <div class="actions">
        <%= link_to "退会する" %>
      </div>
    </div>
  </div>
 </div>