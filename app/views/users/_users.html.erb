<nav class="navbar navbar-light bg-light">
  <a class="navbar-brand">Navbar</a>
  <form class="form-inline">
    <input class="form-control mr-sm-2" type="search" placeholder="名前またはIDを入力">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
</nav>

<table class="table">
  <% users.each do |user| %>
    <tr>
      <td style="width:5%"><%= attachment_image_tag user, :image, format: 'jpeg', fallback: "no_image.jpg", size:'60x60' %></td>
      <td style="width:55%"><%= user.name %></td>
      <td style="width:5%"><%= user.public_uid %></td>
      <% if current_user.following?(user) %>
        <td style="width:35%"><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, remote: true , class: "btn btn-primary" %></td>
      <% else %>
        <td style="width:35%"><%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-success" %></td>
      <% end %>
    </tr>
  <% end %>
</table>