<% followers.each do |user| %>
<div class="user-list">
    <div style="margin-right:10px"><%= attachment_image_tag user, :image, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %></div>
    <div>
      <div class="user-info"><%= user.name %></div>
      <div style="color: #6e767d">ID:<%= user.public_uid %></div>
    </div>
    <% if current_user.following?(user) %>
      <div class="follow-btn"><%= link_to "フォロー解除", user_relationships_path(user.id), method: :delete, remote: true , class: "btn btn-danger rounded-pill" %></div>
    <% else %>
      <div class="follow-btn"><%= link_to "フォロー", user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-outline-primary rounded-pill" %></div>
    <% end %>
</div>
<% end %>